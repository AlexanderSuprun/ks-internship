<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/AppActionButtonOverflow</item>

        <!-- Disables default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    
    <style name="AppActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

</resources>