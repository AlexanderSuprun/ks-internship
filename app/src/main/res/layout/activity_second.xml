<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar_layout"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_second_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_textbox_height"
        android:textSize="@dimen/default_text_size"
        android:layout_marginTop="@dimen/default_margin_big"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:textAlignment="center"
        android:layout_below="@id/toolbar"
        tools:text="Text view"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_second_btn_ok"
        style="@style/AppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin_middle"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_below="@id/activity_second_textview"
        android:layout_alignParentStart="true"
        android:text="@string/second_activity_btn_ok_text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_second_btn_cancel"
        style="@style/AppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin_middle"
        android:layout_below="@id/activity_second_textview"
        android:layout_alignParentEnd="true"
        android:text="@string/activity_second_btn_cancel_text"
        />

</RelativeLayout>